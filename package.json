{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "lint": "node_modules/.bin/eslint --ext .js,.vue --fix --ignore-path .gitignore resources/ --quiet",
        "prettify": "node_modules/.bin/prettier --write --ignore-path .gitignore resources/**/*.{js,vue} --check",
        "prettify:php": "node_modules/.bin/prettier --write --ignore-path .gitignore resources/**/*.{js,vue} --check",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@inertiajs/inertia": "^0.10.0",
        "@inertiajs/inertia-vue3": "^0.5.1",
        "@inertiajs/progress": "^0.2.6",
        "@prettier/plugin-php": "^0.17.6",
        "@tailwindcss/forms": "^0.2.1",
        "@tailwindcss/typography": "^0.3.0",
        "@vue/compiler-sfc": "^3.0.5",
        "axios": "^0.21",
        "browser-sync": "^2.27.7",
        "browser-sync-webpack-plugin": "^2.3.0",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-prettier-vue": "^3.1.0",
        "eslint-plugin-promise": "^5.1.1",
        "eslint-plugin-vue": "^8.0.3",
        "husky": "^7.0.4",
        "laravel-mix": "^6.0.6",
        "lint-staged": "^11.2.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14",
        "postcss-import": "^12.0.1",
        "prettier": "^2.4.1",
        "sass": "^1.43.4",
        "sass-loader": "^12.3.0",
        "tailwindcss": "^2.0.1",
        "vue": "^3.2.21",
        "vue-loader": "^16.1.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.php": [
            "composer lint:fix"
        ],
        "*.{js,vue}": [
            "yarn lint",
            "yarn prettify"
        ]
    },
    "dependencies": {
        "@quasar/extras": "^1.11.5",
        "quasar": "^2.3.0"
    }
}
